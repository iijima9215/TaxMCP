# MCP税額計算サーバー設定ファイル

# サーバー設定
SERVER_HOST=0.0.0.0  # サーバーのホストアドレス（0.0.0.0で全てのIPからアクセス可能）
SERVER_PORT=8000  # サーバーのポート番号
SERVER_NAME="Japanese Tax Calculator MCP"  # サーバー名
SERVER_VERSION="1.0.0"  # サーバーバージョン

# セキュリティ設定
SECRET_KEY=your-secret-key-here-change-in-production  # JWT署名用の秘密鍵（本番環境では必ず変更）
ALGORITHM=HS256  # JWT署名アルゴリズム
ACCESS_TOKEN_EXPIRE_MINUTES=30  # アクセストークンの有効期限（分）

# ログ設定
LOG_LEVEL=INFO  # ログレベル（DEBUG, INFO, WARNING, ERROR, CRITICAL）
LOG_FORMAT=json  # ログ出力形式（json または text）

# 税務データ設定
TAX_DATA_UPDATE_INTERVAL=86400  # 税務データ更新間隔（秒）24時間 = 86400秒
ENABLE_AUDIT_LOGGING=true  # 監査ログの有効化

# 開発設定
DEBUG=false  # デバッグモードの有効化
RELOAD=false  # ファイル変更時の自動リロード

# 税率設定
# 法人税率
CORPORATE_TAX_RATE_LARGE=0.232  # 大法人税率（23.2%）
CORPORATE_TAX_RATE_SMALL=0.15  # 中小法人税率（15%）所得800万円以下
CORPORATE_TAX_RATE_SMALL_HIGH=0.232  # 中小法人税率（23.2%）所得800万円超

# 地方法人税率
LOCAL_CORPORATE_TAX_RATE=0.103  # 地方法人税率（10.3%）

# 事業税率
BUSINESS_TAX_RATE_INCOME_LOW=0.035  # 事業税所得割（低）3.5%（年400万円以下）
BUSINESS_TAX_RATE_INCOME_MID=0.053  # 事業税所得割（中）5.3%（年400万円超800万円以下）
BUSINESS_TAX_RATE_INCOME_HIGH=0.07  # 事業税所得割（高）7.0%（年800万円超）
BUSINESS_TAX_RATE_INCOME_LOW_EXCESS=0.0375  # 事業税所得割（低）超過税率3.75%（資本金1億円超）
BUSINESS_TAX_RATE_INCOME_MID_EXCESS=0.0565  # 事業税所得割（中）超過税率5.65%（資本金1億円超）
BUSINESS_TAX_RATE_INCOME_HIGH_EXCESS=0.0748  # 事業税所得割（高）超過税率7.48%（資本金1億円超）
BUSINESS_TAX_RATE_VALUE_ADDED=0.0037  # 事業税付加価値割（0.37%）資本金1億円超
BUSINESS_TAX_RATE_CAPITAL=0.00086  # 事業税資本割（0.086%）資本金1億円超

# 住民税率
RESIDENT_TAX_INCOME_RATE=0.07  # 住民税法人税割（7%）
RESIDENT_TAX_EQUAL_50M_BELOW=70000  # 住民税均等割（70,000円）資本金5000万円以下
RESIDENT_TAX_EQUAL_50M_1B=180000  # 住民税均等割（180,000円）資本金5000万円超10億円以下
RESIDENT_TAX_EQUAL_1B_ABOVE=290000  # 住民税均等割（290,000円）資本金10億円超

# 計算設定
CALCULATION_ROUNDING_ENABLED=true  # 丸め処理の有効化（true=有効, false=無効）
CALCULATION_ROUNDING_PRECISION=0  # 丸め精度（小数点以下桁数）
CALCULATION_ROUNDING_METHOD=ROUND_HALF_UP  # 丸め方法（ROUND_HALF_UP=四捨五入）